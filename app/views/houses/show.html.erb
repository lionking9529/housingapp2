<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @house.title %>
</p>

<p>
  <strong>Category:</strong>
  <%= @house.category %>
</p>

<p>
  <strong>Address:</strong>
  <%= @house.address %>
</p>

<p>
  <strong>Deposit:</strong>
  <%= @house.deposit %>
</p>

<p>
  <strong>Fee:</strong>
  <%= @house.fee %>
</p>

<p>
  <strong>Image:</strong>
  <%= @house.image %>
</p>

<p>
  <strong>Description:</strong>
  <%= @house.description %>
</p>

<h3>Comments</h3>
<% @house.comments.each do |comment| %>
  <p>
    <strongCommenter:</strong>
    <%= comment.commenter %>
  </p>
  <p>
    <strongCommente:</strong>
    <%= comment.body %>
  </p>
  <p>
    <%= link_to 'Destroy Comment', [comment.house, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>


<h3>Add a comment:</h3>
<%= form_for([@house, @house.comments.build]) do |f| %>
  <p>
      <%=f.label :commenter %><br>
      <%=f.text_field :commenter %><br>
  </p>
  <p>
      <%=f.label :body %><br>
      <%=f.text_area :body %><br>
  </p>  
  <p>
    <%= f.submit %>
  </p>
<% end %>

